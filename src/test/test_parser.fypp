#:include 'forum.inc'

program test_parser

  ! Uses

  use forum_m

  use arg_parser_m

  use ISO_FORTRAN_ENV

  ! No implicit typing

  implicit none (type, external)

  ! Variables

  type(arg_parser_t) :: arg_parser

  ! Create the arg_parser

  arg_parser = arg_parser_t()

  call arg_parser%define_option('input', OPT_REQUIRED_ARG, 'i')
  call arg_parser%define_option('output', OPT_REQUIRED_ARG, 'o')
  call arg_parser%define_option('compress', OPT_OPTIONAL_ARG)
  call arg_parser%define_option('verbose', OPT_NO_ARG, 'v')

  call arg_parser%parse(proc_arg, proc_opt)

contains

   subroutine proc_arg(a, value)

      integer, intent(in)      :: a
      character(*), intent(in) :: value

      print *,'non-flag argument has value ', a, TRIM(value)

   end subroutine proc_arg

   subroutine proc_opt(long_name, value)

      character(*), intent(in) :: long_name
      character(*), intent(in) :: value

      print *,'optional argument --'//TRIM(long_name)//' has value '//TRIM(value)

   end subroutine proc_opt

end program test_parser
